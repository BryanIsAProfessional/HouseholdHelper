<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseholdHelper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/default_secondary</item>
        <item name="colorSecondaryVariant">@color/default_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/default_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Text styling. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_medium_font_size</item>
        <item name="android:actionBarStyle">@style/Theme.HouseholdHelper.AppBarOverlay</item>

        <!-- Background styling. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.HouseholdHelper.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
        <item name="android:background">?attr/colorPrimary</item>

    </style>

    <style name="Theme.HouseholdHelper.LargeFont" parent="Theme.HouseholdHelper">
        <item name="android:textSize">@dimen/title_small_header_font_size</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/default_secondary_variant</item>
    </style>

    <style name="Theme.HouseholdHelper.NoActionBar" parent="Theme.HouseholdHelper">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Beach" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunset_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunset_secondary</item>
        <item name="colorSecondaryVariant">@color/sunset_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/default_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Text styling. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_medium_font_size</item>
        <item name="actionBarTheme">@style/Theme.HouseholdHelper.AppBarOverlay</item>
    </style>

    <style name="Theme.Beach.NoActionBar" parent="Theme.Beach">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_text</item>

        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_variant</item>

        <!-- Status bar color. -->
        <item name="colorAccent">@color/default_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Text styling. -->
        <item name="android:textColor">@color/dark_text</item>

        <item name="android:windowBackground">@color/dark_background</item>

        <item name="android:itemBackground">@color/dark_background</item>
    </style>

    <style name="Theme.Dark.NoActionBar" parent="Theme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HouseholdHelper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.HouseholdHelper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Drawer" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_header_font_size</item>
    </style>
</resources>